{
  "name": "@nodite-light/root",
  "version": "0.0.1",
  "description": "A web framework with React & Express, use Javascript, Typescript & Nodejs for everything.",
  "repository": "git@github.com:nodite/nodite-light.git",
  "author": "Oscaner Miao <oscaner1997@gmail.com>",
  "license": "Apache-2.0",
  "private": true,
  "keywords": [
    "chakra-ui",
    "express",
    "react",
    "nodejs",
    "typescript",
    "javascript",
    "admin",
    "framework"
  ],
  "scripts": {
    "postinstall": "husky install",
    "start:dev": "lerna run start:dev --parallel",
    "start:dev:admin-api": "lerna run start:dev --scope @nodite-light/admin-api",
    "start:dev:admin-web": "lerna run start:dev --scope @nodite-light/admin-web",
    "docker:dev:up": "npm run docker:dev:build && docker-compose -f docker-compose.dev.yml up",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml build",
    "fdn:up": "docker-compose -f docker-compose.fdn.yml up -d",
    "fdn:down": "docker-compose -f docker-compose.fdn.yml down",
    "build": "lerna run build",
    "clean": "lerna run clean --parallel",
    "create-package": "ts-node scripts/create-package",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix --parallel",
    "storybook": "lerna run storybook",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "14.1.2",
    "@types/jest": "^29.5.10",
    "@types/jest-axe": "3.5.9",
    "@types/node": "^20.10.2",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.31",
    "@types/yargs": "17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.13.1",
    "autoprefixer": "^10.4.16",
    "clsx": "^2.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-tsdoc": "0.2.17",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "8.0.3",
    "jest": "^29.7.0",
    "jest-axe": "8.0.0",
    "jest-environment-jsdom": "29.7.0",
    "jsdom": "^23.0.1",
    "lerna": "^8.0.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "6.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2",
    "yargs": "17.7.2"
  },
  "workspaces": [
    "packages/*",
    "services/*",
    "websites/*"
  ]
}
